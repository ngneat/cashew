{
  "name": "cashew-playground",
  "scripts": {
    "release": "cd projects/ngneat/cashew && standard-version --infile ../../../CHANGELOG.md",
    "contributors:add": "all-contributors add",
    "build": "ng build --configuration production",
    "build:lib": "ng build @ngneat/cashew && npm run copy-readme",
    "start": "ng serve",
    "test": "npm run test:lib",
    "test:lib": "npm run test --prefix projects/ngneat/cashew --runInBand",
    "test:lib:watch": "npm run test:watch --prefix projects/ngneat/cashew",
    "ng": "ng",
    "commit": "git-cz",
    "copy-readme": "cp README.md dist/ngneat/cashew",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@angular/animations": "~12.0.1",
    "@angular/common": "~12.0.1",
    "@angular/compiler": "~12.0.1",
    "@angular/core": "~12.0.1",
    "@angular/forms": "~12.0.1",
    "@angular/platform-browser": "~12.0.1",
    "@angular/platform-browser-dynamic": "~12.0.1",
    "@angular/router": "~12.0.1",
    "rxjs": "~6.6.0",
    "zone.js": "~0.11.4",
    "tslib": "^2.1.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.0.1",
    "@angular/cli": "~12.0.1",
    "@angular/compiler-cli": "~12.0.1",
    "@angular/language-service": "^12.0.3",
    "@commitlint/cli": "8.1.0",
    "@commitlint/config-angular": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/jest": "^26.0.23",
    "all-contributors-cli": "^6.13.0",
    "codelyzer": "^6.0.2",
    "cross-env": "^7.0.3",
    "git-cz": "^4.0.0",
    "husky": "^6.0.0",
    "jasmine-core": "~3.7.0",
    "jest": "^27.0.4",
    "jest-preset-angular": "^9.0.2",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "lint-staged": "^11.0.0",
    "ng-packagr": "^12.0.3",
    "prettier": "^2.3.1",
    "standard-version": "^6.0.1",
    "ts-jest": "27.0.3",
    "ts-node": "~7.0.0",
    "typescript": "~4.2.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  }
}
