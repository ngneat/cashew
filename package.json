{
  "name": "cashew-playground",
  "scripts": {
    "ng": "ng",
    "postinstall": "ngcc && husky install",
    "release": "cd projects/ngneat/cashew && standard-version --infile ../../../CHANGELOG.md",
    "contributors:add": "all-contributors add",
    "lint": "ng lint",
    "build:integration": "ng build --configuration production",
    "build:lib": "ng build @ngneat/cashew",
    "postbuild:lib": "cp README.md dist/ngneat/cashew",
    "start": "ng serve",
    "test": "npm run test:lib",
    "test:lib": "ng test @ngneat/cashew --run-in-band",
    "test:lib:watch": "ng test @ngneat/cashew --watch-all",
    "commit": "git-cz"
  },
  "dependencies": {
    "@angular/animations": "~12.0.3",
    "@angular/common": "~12.0.3",
    "@angular/compiler": "~12.0.3",
    "@angular/core": "~12.0.3",
    "@angular/forms": "~12.0.3",
    "@angular/platform-browser": "~12.0.3",
    "@angular/platform-browser-dynamic": "~12.0.3",
    "@angular/router": "~12.0.3",
    "rxjs": "~6.6.7",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-builders/jest": "^12.0.0",
    "@angular-devkit/build-angular": "~12.0.3",
    "@angular-eslint/builder": "12.1.0",
    "@angular-eslint/eslint-plugin": "12.1.0",
    "@angular-eslint/eslint-plugin-template": "12.1.0",
    "@angular-eslint/schematics": "12.1.0",
    "@angular-eslint/template-parser": "12.1.0",
    "@angular/cli": "~12.0.3",
    "@angular/compiler-cli": "~12.0.3",
    "@angular/language-service": "~12.0.3",
    "@commitlint/cli": "^13.0.0",
    "@commitlint/config-conventional": "^13.0.0",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "4.23.0",
    "@typescript-eslint/parser": "4.23.0",
    "all-contributors-cli": "^6.13.0",
    "codelyzer": "^6.0.0",
    "cross-env": "^5.2.0",
    "eslint": "^7.26.0",
    "eslint-plugin-ban": "^1.5.2",
    "git-cz": "^4.0.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "ng-packagr": "^12.0.0",
    "prettier": "^2.3.1",
    "standard-version": "^6.0.1",
    "ts-jest": "^26.5.6",
    "typescript": "~4.2.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,ts,html,component.html}": [
      "prettier --write",
      "git add"
    ]
  }
}
